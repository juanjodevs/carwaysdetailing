---
import Link from '@ui/link.astro'
import { Image } from 'astro:assets'

const { productsTitle, productsCTA, products } = Astro.props
---
<div class="m-5 md:mt-32rounded-3xl">
    <h2 class="text-center text-3xl md:text-4xl text-wrap font-bold">{productsTitle}</h2>
    <div class="flex flex-col md:flex-row md:flex-wrap md:justify-center mt-10 gap-10">
        {
            products.map((product, i) => (
                <a href="/productos" class="flex flex-col md:basis-1/4 gap-5">
                    <div class="flex justify-center bg-slate-800 rounded-md border-4 border-white">
                        <Image height="233" width="192" class="h-48 object-contain m-2" src={product.images[0]} alt={`Producto ${i}`}/>
                    </div>
                    <div class="text-center">{product.name}</div>
                </a>
            ))
        }
    </div>
    <div class="flex justify-center mt-10"><Link href="/productos">{productsCTA}</Link></div>
</div>