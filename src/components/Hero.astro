---
import { Image } from "astro:assets"
import YoutubeEmbed from "./ui/youtube_embed.astro"
const {data: {attributes: content}} = await fetch(`${import.meta.env.STRAPI_URL}/api/landing-page?populate=*`).then((res) => res.json())
const headerimage = `${import.meta.env.STRAPI_URL}${content.header_image.data.attributes.url}`
---
<div class="relative flex flex-col md:justify-center bg-no-repeat bg-center bg-gradient-radial md:from-slate-300 md:via-black md:to-black">
  <div class="flex flex-col p-5 gap-5 md:flex-row md:gap-2">
    <div class=" text-7xl font-bold md:basis-1/2 md:flex-col md:text-8xl">
      <Image height="615" width="500" class="object-contain" src={headerimage} alt="car example" loading="eager" />
    </div>
    <div class="md:basis-1/2 md:flex md:flex-col justify-center px-5 md:px-10 z-10">
      <div class="self-center md:max-w-md text-center mb-10 md:text-left ">{content.header_description}</div>
      <YoutubeEmbed videoCode="5LAxEIeYs5Y" title="YouTube video"/>
    </div>
  </div>
</div>