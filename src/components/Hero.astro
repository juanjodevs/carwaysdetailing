---
import { Image } from 'astro:assets'

import YoutubeEmbed from './ui/youtube_embed.astro'

const { headerImage, headerDescription } = Astro.props
---
<div class="relative flex flex-col md:justify-center bg-no-repeat bg-center">
  <div class="flex flex-col p-5 gap-5 md:flex-row md:gap-2">
    <div class="flex justify-center text-7xl font-bold md:basis-1/2 md:flex-col md:text-8xl">
      <Image height="768" width="1024" class="object-contain" src={headerImage} alt="car example" loading="eager" />
    </div>
    <div class="md:basis-1/2 md:flex md:flex-col justify-center px-5 md:px-10 z-10">
      <div class="self-center md:max-w-md text-center mb-10 md:text-left ">{headerDescription}</div>
      <YoutubeEmbed videoCode="5LAxEIeYs5Y" title="Carways Detailing"/>
    </div>
  </div>
</div>