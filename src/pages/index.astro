---
export const prerender = true

import { getLandingData } from 'utils'

const landingData = await getLandingData()

import Layout from '@layouts/Layout.astro'
import Hero from '@components/Hero.astro'
import ProductsShowcase from '@components/ProductsShowcase.astro'
import Eco from '@components/Eco.astro'
import Cleaning from '@components/Cleaning.astro'
import Services from '@components/Services.astro'
import Map from '@components/Map.astro'
---

<Layout title="Carways Detailing">
  <Hero
    headerImage={landingData.headerImage}
    headerDescription={landingData.headerDescription}
  />
  <ProductsShowcase
    productsTitle={landingData.productsTitle}
    productsCTA={landingData.productsCTA}
    products={landingData.products}
  />
  <Eco
    ecoTitle={landingData.ecoTitle}
    ecoDescription={landingData.ecoDescription}
  />
  <Cleaning
    cleaningTitle={landingData.cleaningTitle}
    cleaningDescription={landingData.cleaningDescription}
    cleaningImage1={landingData.cleaningImage1}
    cleaningImage2={landingData.cleaningImage2}
    cleaningImage3={landingData.cleaningImage3}
    advantage1={landingData.advantage1}
    advantage2={landingData.advantage2}
    advantage3={landingData.advantage3}
  />
  <Services
    servicesTitle={landingData.servicesTitle}
    servicesDescription={landingData.servicesDescription}
    servicesBackground={landingData.servicesBackground}
    services={landingData.services}
  />
  <Map
    mobile={landingData.mobile}
    email={landingData.email}
    address={landingData.address}
    schedule={landingData.schedule}
  />
</Layout>